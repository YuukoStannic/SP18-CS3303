<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.jb963962.loancalculator.MainActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="5dp">

        <TextView
            android:text="Enter your loan amount"
            android:textStyle="bold"
            android:layout_width="200sp"
            android:layout_height="wrap_content"
            android:backgroundTint="@android:color/transparent"
            />

        <EditText
            android:hint="entry1"
            android:id="@+id/entry1"
            android:text="1000"
            android:layout_width="150sp"
            android:layout_height="wrap_content"
            android:backgroundTint="@android:color/darker_gray"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="5dp">

        <TextView
            android:text="Enter your APR"
            android:textStyle="bold"
            android:layout_width="200sp"
            android:layout_height="wrap_content"
            android:backgroundTint="@android:color/transparent"
            />

        <EditText
            android:hint="entry2"
            android:text="6"
            android:id="@+id/entry2"
            android:layout_width="150sp"
            android:layout_height="wrap_content"
            android:backgroundTint="@android:color/darker_gray" />


    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="5dp">

        <TextView
            android:text="Enter your loan term (years)"
            android:textStyle="bold"
            android:layout_width="200sp"
            android:layout_height="wrap_content"
            android:backgroundTint="@android:color/transparent"
            />

        <EditText
            android:hint="entry3"
            android:text="2"
            android:id="@+id/entry3"
            android:layout_width="150sp"
            android:layout_height="wrap_content"
            android:backgroundTint="@android:color/darker_gray" />


    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="5dp">

        <TextView
            android:text="Your loan payment"
            android:textStyle="bold"
            android:layout_width="200sp"
            android:layout_height="wrap_content"
            android:backgroundTint="@android:color/transparent"
            />

        <EditText
            android:hint="entry4"
            android:text="2"
            android:id="@+id/entry4"
            android:layout_width="150sp"
            android:layout_height="wrap_content"
            android:backgroundTint="@android:color/darker_gray" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="30dp">

        <Button
            android:id="@+id/calButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CALCULATE"
            />

        <Button
            android:id="@+id/resButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="RESET"/>

        <Button
            android:id="@+id/tableButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="AMORITIZATION TABLE"/>

    </LinearLayout>
</LinearLayout>
